{
  "name": "backend",
  "version": "1.0.0",
  "main": "app/app.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config -r tsconfig-paths/register app/app.ts",
    "deploy": "npx serverless deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prepare": "husky",
    "check:all": "npm run lint:check && npm run format:check && npm run typescript:check",
    "format:check": "biome format .",
    "format:fix": "biome check --write .",
    "lint:check": "biome check .",
    "lint:fix": "biome lint --write .",
    "typescript:check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.738.0",
    "@aws-sdk/client-s3": "3.750.0",
    "@aws-sdk/lib-dynamodb": "^3.738.0",
    "@faker-js/faker": "9.5.1",
    "@fastify/aws-lambda": "^5.1.4",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@prisma/client": "6.3.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "aws-lambda": "^1.0.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "handlebars": "4.7.8",
    "jolt-server": "file:",
    "json-schema-to-ts": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "6.10.0",
    "pdfmake": "0.2.18",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "6.4.17",
    "@types/pdfmake": "0.2.11",
    "@types/uuid": "^10.0.0",
    "husky": "^9.1.7",
    "prisma": "6.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.0"
  }
}
