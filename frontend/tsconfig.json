{
	"extends": "./config/typescript/tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@icon": ["components/Icon.tsx"],
			"@icons/*": ["assets/icons/*"],
			"@images/*": ["assets/images/*"],
			"@components/*": ["components/*/index.ts"],
			"@enums/*": ["enums/*"],
			"@api/*": ["services/api/*"],
			"@services/*": ["services/*"],
			"@contexts/*": ["contexts/*"],
			"@utils": ["utils/index.ts"],
			"@interfaces/*": ["interfaces/*"],
			"@views/*": ["views/*"],
			"@hooks/*": ["hooks/*"],
			"@config/*": ["config/*"],
			"@routes/*": ["routes/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "build", "**/*.test.ts", "**/*.spec.ts"],
	"references": [
		{ "path": "./config/typescript/tsconfig.app.json" },
		{ "path": "./config/typescript/tsconfig.node.json" }
	]
}
